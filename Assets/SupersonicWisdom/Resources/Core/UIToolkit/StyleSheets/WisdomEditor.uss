:root {
    --button-disable-background: rgba(211, 211, 211, 0.2);    
}

.container {
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 10px; 
}

.image {
    margin: 15px;
}

.message {
    font-size: 14px; 
    -unity-text-align: middle-left; 
    margin-bottom: 15px; 
    white-space: normal;
}

.button {
    width: 30%; 
    align-self: center; 
}

Button:disabled {
    background-color: var(--button-disable-background);
}
